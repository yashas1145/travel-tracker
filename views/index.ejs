<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Travel tracker</title>
        <link rel="stylesheet" href="/css/bootstrap.css">
    </head>
    <body>
        <h1>Travel tracker</h1>
        
        <h3>Add a state</h3>
        <form action="/state" method="post">
            <input class="form-control" type="text" name="state_name" id="state_name" placeholder="State name" required>
            <input class="form-control" type="text" name="state_code" id="state_code" placeholder="State code" required>
            <input class="btn btn-primary" type="submit" value="Add state">
        </form> 

        <h3>States visited</h3>
        <% if (locals.states) { %>
            <div>
                <table class="table table-hover">
                    <thead>
                        <th>State name</th>
                        <th>State code</th>
                    </thead>
                    <% for (let i in states) { %>
                        <tr>
                            <td><%= states[i].state_name %></td>
                            <td><%= states[i].state_code %></td>
                        </tr>
                    <% } %>
                </table>
            </div>
        <% } else { %>
        <% } %>
        <script src="/js/bootstrap.min.js"></script>
        <script src="/jquery.js"></script>
        <script src="/scripts/script.js"></script>
    </body>
</html>